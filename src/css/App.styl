bgColor = #F6F7F9;
textColor = #5F5F5F;

med = 1130px;
sml = 480px;

.App
  text-align center
  width 100%
  height 100%
  position relative
  .appContainer
    margin auto
    width 50%
    height 100%
    max-height 49em
    max-width sml
    @media (max-width: sml)
      width 100%
    

.App-header
  background-color bgColor
  height 45%
  color textColor
  display flex
  flex-direction column
  img
    width 8em
    margin auto
    margin-bottom 0px
  .hoursNotice
    height 8em
    width 73%
    margin auto
    background-color #FFFFFF
    border-radius 5px
    box-shadow 0px 3px 2px rgba(0, 0, 0, 0.03)
    h1
      font-weight 300
      font-size 1.25em
      margin-top 1.4em
    h2
      color #a8a8a8
      font-weight 300
      font-size 1em
    .seperator
      width 1.4em
      height 0.2em
      border-radius 10em
      background-color #c3c3c3
      margin auto
    .openStatus
      color #75BD7C
    .closedStatus
      color #616161
    
.clockContainer
  height 55%
  width 100%
  display flex
  svg
    margin auto
    width 80%
  


#ring2 {
  fill:#FBFCFC;stroke:#F8F8F8;stroke-width:2;
}

#ring1 {
  fill:#F6F7F9;stroke:#EEEEEF;stroke-width:2;
}

#face {
  fill:#FFFFFF;stroke:#000000;stroke-width:2;
}

#hour, #min {
  fill:#333333;
}

#sec {
  fill:none;stroke:#FF5555;stroke-width:1.0321;
}

#dot {
  fill: #f44336;
}